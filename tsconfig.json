{
    "extends": "libertygame-types/recommended.json",
    "compilerOptions": {
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitOverride": true,
        "newLine": "lf",
        "target": "ES5",
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "outDir": "dist",
        "declarationDir": "types",
        "alwaysStrict": true,
        "sourceMap": true,
        "declarationMap": true,
        "module": "CommonJS",
        "lib": ["DOM", "ES2021"],
        "rootDir": "src"
    },
    "include": ["src/**/*", "node_modules/libertygame-types"]
}
